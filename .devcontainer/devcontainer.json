{
    "name": "ocaml",
    "image": "mcr.microsoft.com/devcontainers/base:jammy",
    "features": {
        "ghcr.io/devcontainers-extra/features/opam-asdf:2": {}
    },
    "onCreateCommand": "sudo apt update -y && sudo apt install -y bubblewrap && opam init -y && opam install -y ocaml-lsp-server",
    "customizations": {
        "vscode": {
            "extensions": [
                "ocamllabs.ocaml-platform"
            ]
        }
    }
}